{
  "name": "pollution-eye",
  "version": "1.0.0",
  "description": "An application which allows you to see the pollution levels of cities around the world!",
  "private": true,
  "scripts": {
    "start": "webpack serve --open --config webpack.dev.js",
    "https-serve": "http-server ./dist -S -C cert.pem -o",
    "build": "webpack --config webpack.prod.js",
    "dev": "webpack --config webpack.dev.js",
    "watch": "webpack --watch",
    "deploy": "firebase deploy --only hosting:pollution-eye"
  },
  "author": "MightyCoderX",
  "license": "MIT",
  "devDependencies": {
    "@babel/core": "^7.15.0",
    "@babel/preset-env": "^7.15.0",
    "babel-loader": "^8.2.2",
    "clean-webpack-plugin": "^4.0.0",
    "css-loader": "^6.2.0",
    "html-loader": "^2.1.2",
    "html-webpack-plugin": "^5.3.2",
    "style-loader": "^3.2.1",
    "uuid": "^8.3.2",
    "webpack": "^5.51.1",
    "webpack-cli": "^4.8.0",
    "webpack-dev-server": "^4.0.0",
    "webpack-merge": "^5.8.0"
  },
  "dependencies": {
    "dotenv": "^10.0.0"
  }
}
